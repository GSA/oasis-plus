---
    const { background_image} = Astro.props;
    const style = background_image ? `background-image: url(${background_image.src})`: 'background-image: none'
---

  <div class="grid-container margin-y-8 padding-bottom-4 padding-x-10" style={style}>
    <div class="grid-row flex-justify-center padding-y-2">
      {Astro.slots.has('header') && (
      <h2 class="usa-hero__heading--alt margin-bottom-1">
          <slot name="header"></slot>
      </h2>
    )}
    </div>
    <div class="grid-row flex-justify-center">
        <div class="bg-white  padding-x-3 maxw-mobile-lg">
            <slot></slot>
        </div>
    </div>

  </div>


