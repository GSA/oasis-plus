                <option value="AE">AE - Armed Forces Africa</option>
                <option value="AE">AE - Armed Forces Canada</option>
                <option value="AE">AE - Armed Forces Europe</option>
                <option value="AE">AE - Armed Forces Middle East</option>
                <option value="AP">AP - Armed Forces Pacific</option>
            </select>
        </div>

        <div class="usa-form-group">
            <label class="usa-label" for="zip">ZIP code</label>
            <span id="zip_missing_message" class="usa-error-message"></span>
            <input
                class="usa-input validate-input"
                data-error-id="zip_missing_message"
                data-error-msg="This field is required; please enter a valid ZIP code."
                id="zip"
                maxlength="10"
                name="zip"
                pattern="^[\\d]{5}((-|\\+)[\\d]{4})?$"
                required="true"
                type="text"
            />
        </div>

        <div class="usa-form-group">
            <label class="usa-label" for="email">
                Work email
                <span class="usa-hint" id="emailHint">(.gov or .mil only)</span>
            </label>
            <span id="email_missing_message" class="usa-error-message"></span>
            <input
                aria-describedby="emailHint"
                autocapitalize="off"
                autocorrect="off"
                class="usa-input validate-input"
                data-error-id="email_missing_message"
                data-error-msg="This field is required; please enter a valid email."
                id="email"
                maxlength="255"
                name="email"
                pattern="[a-zA-Z\\d]+(?:(\\.|-|_)?[a-zA-Z\\d]+)*@[a-zA-Z\\-._]+(\\.gov|\\.mil|\\.GOV|\\.MIL)"
                required="true"
                type="text"
            />
        </div>

        <div class="usa-form-group">
            <label class="usa-label" for="phone">
                Work phone number
                <span class="usa-hint" id="workPhoneHint">(xxx-xxx-xxxx)</span>
            </label>
            <span id="phone_missing_message" class="usa-error-message"></span>
            <input
                aria-describedby="workPhoneHint"
                class="usa-input validate-input"
                data-error-id="phone_missing_message"
                data-error-msg="This field is required; please enter a valid phone number."
                id="phone"
                maxlength="12"
                name="phone"
                pattern="^(\\d{3}-){2}\\d{4}$"
                required="true"
                type="tel"
            />
        </div>
    </fieldset>
    <fieldset class="usa-fieldset margin-top-4">
        <legend class="usa-legend usa-legend--large">DPA Training</legend>
        <input
            name="category[oasisplus][checked]"
            type="hidden"
            value="OASISPLUS"
        />
        <div class="usa-form-group">
            <label class="usa-label" for="oasis-training">
                DPA training method
            </label>
            <span id="dpa_method_missing_message" class="usa-error-message"></span>
            <select
                class="if-other usa-select validate-input"
                data-error-id="dpa_method_missing_message"
                data-error-msg="This field is required; please select from the pull-down list."
                id="oasis-training"
                name="category[oasisplus][ContractTrainingMethod]"
                required="true"
            >
                <option value="">- Select -</option>
                <option value="Webinar">Webinar</option>
                <option value="DAU Course">DAU Course</option>
                <option value="Teleconference">Teleconference</option>
                <option value="In person/On-site training">In person/On-site training</option>
                <option value="Other">Other</option>
            </select>
        </div>

        <div class="usa-form-group hidden otherInput">
            <label for="oasis-Other">
                Other training method (if applicable)
            </label>
            <span
                id="dpa_other_method_missing_message"
                class="usa-error-message"></span>
            <input
                class="usa-input"
                data-error-id="dpa_other_method_missing_message"
                data-error-msg="This field is required; please enter a training method"
                id="oasis-Other"
                maxlength="255"
                name="category[oasisplus][Othertrainingmethod]"
                pattern="^(?! )[\x20-\x7e]{0,255}$"
                type="text"
            />
        </div>

        <div class="usa-form-group usa-date-picker">
            <label for="oasis-Date">DPA training completion date </label>
            <span id="dpa_date_missing_message" class="usa-error-message"></span>
            <input
                class="usa-input validate-input"
                data-error-id="dpa_date_missing_message"
                data-error-msg="This field is required; please enter a date in MM/DD/YYYY format."
                id="oasis-Date"
                maxlength="10"
                name="category[oasisplus][DateTrainingCompleted]"
                pattern="(0[1-9]|1[012])/(0[1-9]|[12][0-9]|3[01])/(19|20)\\d\\d"
                placeholder="MM/DD/YYYY"
                required="true"
                type="text"
            />
        </div>
    </fieldset>
    <fieldset class="usa-fieldset margin-top-4">
        <legend class="usa-legend usa-legend--large">
            Warrant information
        </legend>
        <div class="usa-form-group">
            <label class="usa-label" for="Warrent_Level">
                Warrant Level (include $ limitation). Provide any limiting
                language on your warrant. Example: $10M, Unlimited, or NA if you
                do not have a warrant.
            </label>
            <span id="dpa_warrant_missing_message" class="usa-error-message"></span>
            <input
                class="usa-input validate-input"
                data-error-id="dpa_warrant_missing_message"
                data-error-msg="Please enter a valid Warrant Level."
                id="Warrent_Level"
                maxlength="100"
                name="Warrent_Level"
                pattern="^(?! )[a-zA-Z\\d\\$\\., ]{1,100}$"
                required="true"
                type="text"
            />
        </div>

        <div class="usa-form-group usa-date-picker">
            <label class="usa-label" for="warrent_issue_date">
                Warrant Issue Date
            </label>
            <span
                id="dpa_warrant_date_missing_message"
                class="usa-error-message"></span>
            <input
                class="usa-input validate-input"
                data-error-id="dpa_warrant_date_missing_message"
                data-error-msg="This field is required; please enter a date in MM/DD/YYYY format."
                id="warrent_issue_date"
                maxlength="10"
                name="warrent_issue_date"
                pattern="(0[1-9]|1[012])/(0[1-9]|[12][0-9]|3[01])/(19|20)\\d\\d"
                placeholder="MM/DD/YYYY"
                required="true"
                type="text"
            />
        </div>
    </fieldset>
    <fieldset class="usa-fieldset margin-top-4">
        <legend class="usa-legend usa-legend--large">
            Service requirement request
        </legend>
        <fieldset
            class="usa-fieldset fieldset-radio"
            id="assistance_group"
            data-error-id="assistance_missing_message"
            data-error-msg="This field is required; please indicate if you need assistance."
        >
            <legend class="usa-legend font-sans-md padding-top-3">
                Do you need assistance with a current or future professional
                service requirement?
            </legend>

            <div class="usa-radio">
                <span id="assistance_missing_message" class="usa-error-message"></span>
                <input
                    class="usa-radio usa-radio__input"
                    id="assistanceYes"
                    name="Assistancequestion"
                    required="true"
                    type="radio"
                    value="Yes"
                />
                <label class="usa-radio__label" for="assistanceYes">
                    Yes
                </label>
            </div>

            <div class="usa-radio">
                <input
                    class="usa-radio usa-radio__input"
                    id="assistanceNo"
                    name="Assistancequestion"
                    required="true"
                    type="radio"
                    value="No"
                />
                <label class="usa-radio__label" for="assistanceNo">No</label>
            </div>

            <div class="usa-form-group other-text disabled hidden">
                <label class="usa-label" for="Need_Assistance">
                    If yes, please specify:
                </label>
                <span
                    id="assistance_need_missing_message"
                    class="usa-error-message"></span>
                <input
                    class="usa-input validate-input"
                    data-error-id="assistance_need_missing_message"
                    data-error-msg="Please enter a valid specification."
                    id="Need_Assistance"
                    maxlength="255"
                    name="Need_Assistance"
                    pattern="^(?! )[\x20-\x7e]{0,255}$"
                    type="text"
                    disabled="disabled"
                />
            </div>
        </fieldset>
    </fieldset>
    <fieldset
        id="acknowldgement_group"
        class="usa-fieldset margin-top-4"
        data-error-id="acknowledgement_missing_message"
        data-error-msg="All acknowledgements are required; please acknowledge each item."
    >
        <legend class="usa-legend usa-legend--large"> Acknowledgements </legend>
        <span id="acknowledgement_missing_message" class="usa-error-message"></span>

        <p>By completing and submitting this request:</p>
        <div class="usa-checkbox">
            <input
                class="usa-checkbox__input validate-checkbox"
                id="oasis_moa_doc_review_yes"
                name="oasis_plus_moa_document_review"
                required="true"
                type="checkbox"
                value="Yes"
            />
            <label class="usa-checkbox__label" for="oasis_moa_doc_review_yes">
                I have reviewed the OASIS+ Delegation of Procurment Authority
                Memorandum of Agreement (MOA).
            </label>
        </div>

        <div class="usa-checkbox">
            <input
                class="usa-checkbox__input validate-checkbox"
                id="Individual-above-yes"
                name="I_represent_that_I_am_the_individual_whose_information_appears_above"
                required="true"
                type="checkbox"
                value="Yes"
            />
            <label class="usa-checkbox__label" for="Individual-above-yes">
            I represent that I am the individual whose information appears above.
            </label>
        </div>

        <div class="usa-checkbox">
            <input
                class="usa-checkbox__input validate-checkbox"
                id="Agree-to-MOA-terms-yes"
                name="rep_acceptance"
                required="true"
                type="checkbox"
                value="Yes"
            />
            <label class="usa-checkbox__label" for="Agree-to-MOA-terms-yes">
                I accept and agree to the terms of the delegation of
                procurement authority found in the applicable Delegation of
                Procurement Authority Letter and will fulfill the roles and
                responsibilities identified therein.
            </label>
        </div>

        <div class="usa-checkbox">
            <input
                class="usa-checkbox__input validate-checkbox"
                id="accept_terms_yes"
                name="accept_terms"
                required="true"
                type="checkbox"
                value="Yes"
            />
            <label class="usa-checkbox__label" for="accept_terms_yes">
                I accept and agree to the terms identified in the OASIS+
                Contract(s) and the Ordering Guide. I will fulfill the roles and
                responsibilities identified therein.
            </label>
        </div>

        <div class="usa-checkbox">
            <input
                class="usa-checkbox__input validate-checkbox"
                id="Warranted-contracting-officer-yes"
                name="rep_warranted"
                required="true"
                type="checkbox"
                value="Yes"
            />
            <label
                class="usa-checkbox__label"
                for="Warranted-contracting-officer-yes"
                >
                I represent that I am a duly appointed contracting officer per
                FAR Part 1.603 or authorized official with authority to obligate
                funds for the agency.
            </label>
        </div>
    </fieldset>

    <input
        class="g-recaptcha"
        id="g-token"
        name="g-token"
        type="hidden"
        value=""
    />
    <input
        name="redirect"
        type="hidden"
        value="https://www.gsa.gov/oasis-plus/buyers-guide/obtain-dpa/dpa-form-success/"
    />

    <input class="usa-button" name="submit" type="submit" value="Submit" />
