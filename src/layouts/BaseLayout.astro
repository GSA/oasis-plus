---
import GSAHeader from '@components/GSAHeader.astro';
import USAIdentifier from '@components/USAIdentifier.astro';
import Banner from '@components/Banner.astro';
import LastModified from "@components/LastModified.astro"

const { title, description, show_site_link, lastModified=undefined} = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <script is:inline src={`${import.meta.env.BASE_URL}js/uswds-init.min.js`}></script>
    <link rel="stylesheet" href={`${import.meta.env.BASE_URL}styles/styles.css`} />

    <link rel="icon" type="image/png" sizes="32x32" href={`${import.meta.env.BASE_URL}images/favicon-32x32.png`}>
    <link rel="icon" type="image/png" sizes="16x16" href={`${import.meta.env.BASE_URL}images/favicon-16x16.png`}>

    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:image" content="https://www.gsa.gov/sites/gsa.gov/themes/custom/gsa/custom_assets/images/open_graph_image.jpeg">
    <title>{title}</title>

    <script async type="text/javascript" src="https://dap.digitalgov.gov/Universal-Federated-Analytics-Min.js?agency=GSA" id="_fed_an_ua_tag"></script>
  </head>
  <body>
    <div class="usa-overlay"></div>
    <div id="app">
      <a class="usa-skipnav" href="#main-content">Skip to main content</a>
      <Banner />
      <GSAHeader show_site_link={show_site_link}/>
      <div class="flex-fill grid-row flex flex-column height-full">
        <div class="border-top-1px border-base-lightest wide-layout">
          <slot />
        </div>
      </div>
      {lastModified && ( <LastModified lastModified={lastModified} /> )}
      <USAIdentifier />
    </div>
    <script is:inline src={`${import.meta.env.BASE_URL}js/uswds.min.js`}></script>
  </body>
</html>