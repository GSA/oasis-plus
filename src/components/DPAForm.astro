        <div class="usa-form-group">
            <label class="usa-label" for="Work_Address">Work address</label>
            <span id="work_address_missing_message" class="usa-error-message"></span>
            <input
                data-error-id="work_address_missing_message"
                class="usa-input validate-input"
                data-error-msg="This field is required; please enter a valid work address."
                id="Work_Address"
                maxlength="255"
                name="Work_Address"
                pattern="^(?! )[a-zA-Z\\d .\\-\\$]+$"
                required="true"
                type="text"
            />
        </div>

        <div class="usa-form-group">
            <label class="usa-label" for="city">City</label>
            <span id="city_missing_message" class="usa-error-message"></span>
            <input
                class="usa-input validate-input"
                data-error-id="city_missing_message"
                data-error-msg="This field is required; please enter a valid city."
                id="city"
                maxlength="100"
                name="city"
                pattern="^(?! )[a-zA-Z ]+$"
                required="true"
                type="text"
            />
        </div>

        <div class="usa-form-group">
            <label class="usa-label" for="state">State</label>
            <span id="state_missing_message" class="usa-error-message"></span>
            <select
                class="usa-select validate-input"
                data-error-msg="This field is required; please select a state from the pull-down list."
                data-error-id="state_missing_message"
                id="state"
                name="state"
                required="true"
            >
                <option value="">- Select -</option>
                <option value="AL">Alabama</option>
                <option value="AK">Alaska</option>
